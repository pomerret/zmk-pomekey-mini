#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <5>;
        // 25 keys per side (5x5 logical matrix for Charlieplex mapping)
        // Left side logical columns: 0-5
        // Right side logical columns (with col-offset = 5): 5-10
        map = <
            RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)    RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,0) RC(1,2) RC(1,3) RC(1,4) RC(1,5)    RC(1,5) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
            RC(2,0) RC(2,1) RC(2,3) RC(2,4) RC(2,5)    RC(2,5) RC(2,6) RC(2,8) RC(2,9) RC(2,10)
            RC(3,0) RC(3,1) RC(3,2) RC(3,4) RC(3,5)    RC(3,5) RC(3,6) RC(3,7) RC(3,9) RC(3,10)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,5)    RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,10)
        >;
    };

    layouts {
        compatible = "zmk,physical-layouts";
        physical_layout0: physical_layout_0 {
            compatible = "zmk,physical-layout";
            status = "okay";
            display-name = "Default Layout";
            transform = <&default_transform>;
            kscan = <&kscan0>;
            keys
                = <&key_physical_attrs 100 100 0 0 0 0 0>
                , <&key_physical_attrs 100 100 100 0 0 0 0>
                , <&key_physical_attrs 100 100 200 0 0 0 0>
                , <&key_physical_attrs 100 100 300 0 0 0 0>
                , <&key_physical_attrs 100 100 400 0 0 0 0>
                , <&key_physical_attrs 100 100 0 100 0 0 0>
                , <&key_physical_attrs 100 100 100 100 0 0 0>
                , <&key_physical_attrs 100 100 200 100 0 0 0>
                , <&key_physical_attrs 100 100 300 100 0 0 0>
                , <&key_physical_attrs 100 100 400 100 0 0 0>
                , <&key_physical_attrs 100 100 0 200 0 0 0>
                , <&key_physical_attrs 100 100 100 200 0 0 0>
                , <&key_physical_attrs 100 100 200 200 0 0 0>
                , <&key_physical_attrs 100 100 300 200 0 0 0>
                , <&key_physical_attrs 100 100 400 200 0 0 0>
                , <&key_physical_attrs 100 100 0 300 0 0 0>
                , <&key_physical_attrs 100 100 100 300 0 0 0>
                , <&key_physical_attrs 100 100 200 300 0 0 0>
                , <&key_physical_attrs 100 100 300 300 0 0 0>
                , <&key_physical_attrs 100 100 400 300 0 0 0>
                , <&key_physical_attrs 100 100 0 400 0 0 0>
                , <&key_physical_attrs 100 100 100 400 0 0 0>
                , <&key_physical_attrs 100 100 200 400 0 0 0>
                , <&key_physical_attrs 100 100 300 400 0 0 0>
                , <&key_physical_attrs 100 100 400 400 0 0 0>

                , <&key_physical_attrs 100 100 600 0 0 0 0>
                , <&key_physical_attrs 100 100 700 0 0 0 0>
                , <&key_physical_attrs 100 100 800 0 0 0 0>
                , <&key_physical_attrs 100 100 900 0 0 0 0>
                , <&key_physical_attrs 100 100 1000 0 0 0 0>
                , <&key_physical_attrs 100 100 600 100 0 0 0>
                , <&key_physical_attrs 100 100 700 100 0 0 0>
                , <&key_physical_attrs 100 100 800 100 0 0 0>
                , <&key_physical_attrs 100 100 900 100 0 0 0>
                , <&key_physical_attrs 100 100 1000 100 0 0 0>
                , <&key_physical_attrs 100 100 600 200 0 0 0>
                , <&key_physical_attrs 100 100 700 200 0 0 0>
                , <&key_physical_attrs 100 100 800 200 0 0 0>
                , <&key_physical_attrs 100 100 900 200 0 0 0>
                , <&key_physical_attrs 100 100 1000 200 0 0 0>
                , <&key_physical_attrs 100 100 600 300 0 0 0>
                , <&key_physical_attrs 100 100 700 300 0 0 0>
                , <&key_physical_attrs 100 100 800 300 0 0 0>
                , <&key_physical_attrs 100 100 900 300 0 0 0>
                , <&key_physical_attrs 100 100 1000 300 0 0 0>
                , <&key_physical_attrs 100 100 600 400 0 0 0>
                , <&key_physical_attrs 100 100 700 400 0 0 0>
                , <&key_physical_attrs 100 100 800 400 0 0 0>
                , <&key_physical_attrs 100 100 900 400 0 0 0>
                , <&key_physical_attrs 100 100 1000 400 0 0 0>
                ;
        };
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-charlieplex";
        status = "okay";
        wakeup-source;
        gpios
            = <&xiao_d 0 GPIO_ACTIVE_HIGH>
            , <&xiao_d 1 GPIO_ACTIVE_HIGH>
            , <&xiao_d 2 GPIO_ACTIVE_HIGH>
            , <&xiao_d 3 GPIO_ACTIVE_HIGH>
            , <&xiao_d 4 GPIO_ACTIVE_HIGH>
            , <&xiao_d 5 GPIO_ACTIVE_HIGH>
            ;
        bus-type = <0>;
    };
    
    encoder: encoder {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
        a-gpios = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // P1.15 D10 (Encoder A)
        b-gpios = <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // P1.14 D9  (Encoder B)
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder>;
        triggers-per-rotation = <20>;
    };
};

&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,   // P0.05 (D5) - SCLK
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,   // P0.04 (D4) - SDIO/MOSI
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;   // P0.04 (D4) - MISO (shared)
        };
    };
    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};

&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>; // NFC1 P0.09
    
    trackball: trackball@0 {
        compatible = "pixart,paw3222";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&xiao_d 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // D0: motion
    };

    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;
    };
};
